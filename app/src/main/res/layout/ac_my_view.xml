<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sz.dzh.dviewsummary.widget.StrokeTextView
        android:id="@+id/tv_marker_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:paddingLeft="5dp"
        android:textSize="16sp"
        android:textColor="@color/text_color_black"
        android:text="描边文字" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyViewGroup  wrap_content,MyView确定大小"/>

    <com.sz.dzh.dviewsummary.widget.MyViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

         <com.sz.dzh.dviewsummary.widget.MyView
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:background="@color/colorPrimaryDark"
             app:defaultSize="20dp"/>


    </com.sz.dzh.dviewsummary.widget.MyViewGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyViewGroup  wrap_content,MyView wrap_content"/>

    <com.sz.dzh.dviewsummary.widget.MyViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.sz.dzh.dviewsummary.widget.MyView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            app:defaultSize="80dp"/>

    </com.sz.dzh.dviewsummary.widget.MyViewGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyViewGroup  wrap_content,MyView Match_parent,这个有触摸事件"/>

    <com.sz.dzh.dviewsummary.widget.MyViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.sz.dzh.dviewsummary.widget.MyView
            android:id="@+id/myView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            app:defaultSize="80dp"/>

    </com.sz.dzh.dviewsummary.widget.MyViewGroup>

</LinearLayout>